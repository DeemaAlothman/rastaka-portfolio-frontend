// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Admin User Model
model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Company/Client Model
model Company {
  id          String         @id @default(uuid())
  name        String
  description String?
  logo        String?

  // SEO fields
  slug        String?        @unique
  seoTitle    String?
  seoDescription String?
  seoKeywords String?

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  portfolioItems PortfolioItem[]
}

// Portfolio Item Model
model PortfolioItem {
  id          String       @id @default(uuid())
  title       String
  description String?
  type        WorkType
  category    WorkCategory

  // For websites
  websiteUrl  String?

  // Media files - single or multiple
  mediaUrl    String?      // For single media (LOGO, REEL, WEBSITE)
  mediaType   MediaType?   // IMAGE or VIDEO
  mediaUrls   String?      // JSON array for multiple images (SOCIAL_MEDIA)

  // Client info (for individual work)
  clientName  String?

  // Company relation (for corporate work)
  companyId   String?
  company     Company?     @relation(fields: [companyId], references: [id], onDelete: Cascade)

  // SEO fields
  slug        String?      @unique
  seoTitle    String?
  seoDescription String?
  keywords    String?

  publishDate DateTime     @default(now())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([type])
  @@index([category])
  @@index([companyId])
  @@index([slug])
}

// SEO Configuration Model
model SeoConfig {
  id              String   @id @default(uuid())
  siteTitle       String   @default("Rastaka Portfolio")
  siteDescription String   @default("معرض أعمال شركة Rastaka")
  siteKeywords    String   @default("تصميم, تطوير, ريلز, شعارات")
  ogImage         String?
  twitterHandle   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Site Configuration Model
model Config {
  id              String   @id @default(uuid())
  siteName        String   @default("Rastaka")
  siteDescription String?
  email           String?
  phone           String?
  address         String?
  facebookUrl     String?
  instagramUrl    String?
  twitterUrl      String?
  linkedinUrl     String?
  youtubeUrl      String?
  whatsappNumber  String?
  footerText      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Contact Submission Model
model ContactSubmission {
  id        String              @id @default(uuid())
  name      String
  email     String
  phone     String?
  subject   String?
  message   String
  status    ContactStatus       @default(UNREAD)
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  @@index([status])
  @@index([createdAt])
}

// Enums
enum WorkType {
  WEBSITE
  LOGO
  REEL
  SOCIAL_MEDIA
}

enum WorkCategory {
  INDIVIDUAL
  CORPORATE
}

enum MediaType {
  IMAGE
  VIDEO
}

enum ContactStatus {
  UNREAD
  READ
  ARCHIVED
}
